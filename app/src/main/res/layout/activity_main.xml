            <LinearLayout
                android:layout_marginBottom="16dp"
                android:id="@+id/mainActivity_part_resultScreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/mainActivity_image_medicine"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/ic_medicine_1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="20"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/main_activity_label_medicine_name" />

                                <TextView
                                    android:id="@+id/mainActivity_text_medicineName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="70"
                                    android:ellipsize="end"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="20"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/main_activity_label_medicine_firm" />

                                <TextView
                                    android:id="@+id/mainActivity_text_medicineFirm"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="70"
                                    android:ellipsize="end"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="20"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/main_activity_label_medicine_barcode" />

                                <TextView
                                    android:id="@+id/mainActivity_text_medicineBarcode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="70"
                                    android:ellipsize="end"
                                    android:maxLines="1" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:orientation="horizontal"
                                android:weightSum="100">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="20"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/main_activity_label_medicine_active_ingredient" />

                                <TextView
                                    android:id="@+id/mainActivity_text_medicineActiveIngredient"
