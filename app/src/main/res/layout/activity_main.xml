                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:layout_weight="70"
                                    android:ellipsize="end"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
